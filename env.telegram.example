# Configuration pour l'intégration Telegram
# Copiez ce fichier vers .env.local et remplissez les valeurs

# Telegram Bot Configuration
VITE_TELEGRAM_BOT_TOKEN=your_bot_token_here
VITE_TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here

# Supabase Edge Functions (pour le webhook)
VITE_SUPABASE_EDGE_FUNCTION_URL=https://your-project.supabase.co/functions/v1

# Configuration de développement
VITE_TELEGRAM_DEBUG_MODE=true
VITE_TELEGRAM_LOG_LEVEL=info

# Limites et configuration
VITE_TELEGRAM_MAX_FILE_SIZE=10485760  # 10MB en bytes
VITE_TELEGRAM_SYNC_INTERVAL=300000    # 5 minutes en ms
VITE_TELEGRAM_MAX_RETRIES=3

# URLs de test
VITE_TELEGRAM_API_BASE_URL=https://api.telegram.org
VITE_TELEGRAM_FILE_BASE_URL=https://api.telegram.org/file/bot

# Configuration de sécurité
VITE_TELEGRAM_WEBHOOK_IP_WHITELIST=149.154.160.0/20,91.108.4.0/22
VITE_TELEGRAM_RATE_LIMIT_REQUESTS=30
VITE_TELEGRAM_RATE_LIMIT_WINDOW=60000  # 1 minute en ms
